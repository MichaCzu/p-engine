#include "light_controller.hpp"
#include "app/game/controller.hpp"

void LController::reset()
{
    //SDL_SetHint(SDL_HINT_RENDER_SCALE_QUALITY, "2");
    pge::image::query(lighttexture, viewport->w / 4 + 6, viewport->h / 4 + 6);
    //pge::image::set_blendmode(lighttexture, GPU_BLEND_PREMULTIPLIED_ALPHA);
    pge::image::set_blendfunc(lighttexture, GPU_FUNC_DST_COLOR, GPU_FUNC_ZERO, GPU_FUNC_DST_ALPHA, GPU_FUNC_ONE);
    pge::image::set_blendeq(lighttexture, GPU_EQ_SUBTRACT, GPU_EQ_ADD);
    //pge::image::set_filter(lighttexture, GPU_FILTER_LINEAR);
    //SDL_SetHint(SDL_HINT_RENDER_SCALE_QUALITY, "0");
}

bool LController::load_colormap(uint8_t val)
{
    pge::image::set_target(colormaptexture);
    for (int i = 50; i >= 0; i--) {
        colormap[i] = pge::draw::get_pixel(val, 50 - i);
    }
    pge::image::reset_target();
    return true;
}

SDL_Color LController::get_color(uint8_t inten)
{
    if (inten > 50)
        return colormap[50];
    else if (inten < 1)
        return colormap[0];
    else
        return colormap[inten];
}

void LController::update() //
{
    float at = abs((float(pge::get_time_passed() % 30000) - 15000) / 15000) * 5 - 2;
    if (at > 1)
        at = 1;
    if (at < 0)
        at = 0;

    load_colormap(at * 59);
    skylight = abs(at * 38 + 12);

    pge::image::set_target(lighttexture);
    pge::window::clear();

    float px, py;
    control->plr()->get_pos(&px, &py);
    //SDL_GetMouseState(&mx, &my);

    int shx = viewport->x / 4;
    int shy = viewport->y / 4;

    int mx, my;
    SDL_GetMouseState(&mx, &my);
    //mx = mx / pge::draw::get_scale() / 4 + 1;
    //my = my / pge::draw::get_scale() / 4 + 1;

    vLights[0].x = (px) / 4;
    vLights[0].y = (py - 12) / 4;

    vLights[1].x = mx / pge::draw::get_scale() / 4 + 1 + shx;
    vLights[1].y = my / pge::draw::get_scale() / 4 + 1 + shy;
    //int x1 = (mx / pge::draw::get_scale() - int(viewport->x) % 12) / 12;
    //int y1 = (my / pge::draw::get_scale() - int(viewport->y) % 12) / 12;

    for (int i = -1; i < pge::image::get_height(lighttexture); i++)
        for (int j = -1; j < pge::image::get_width(lighttexture); j++) {
            uint8_t light = intensity_test(j + shx, i + shy);
            for (int k = vLights.size() - 1; k >= 0; k--) {
                if (light < vLights[k].intensity)
                    if (abs(j + shx - vLights[k].x) < vLights[k].intensity && abs(i + shy - vLights[k].y) < vLights[k].intensity) {
                        uint8_t test = intensity_test(j + shx, i + shy, vLights[k].x, vLights[k].y, vLights[k].intensity);
                        if (light < test)
                            light = test;
                    }
                if (light > 49)
                    break;
            }
            //light = best;
            pge::draw::pixel(j, i, get_color(light));
        }
    //pge::draw::pixel_color(1, 1, 0xFFFFFFFF);
    //pge::draw::pixel_color(0, 0, 0xFFFFFFFF);

    pge::image::reset_target();
}

int LController::intensity_test(int x1, int y1)
{
    if (control->env()->bg_check((x1 - 1) / 3, y1 / 3) != bt_normal && control->env()->bc_check((x1 - 1) / 3, y1 / 3) != bt_normal)
        return skylight;
    if (control->env()->bg_check((x1 + 1) / 3, y1 / 3) != bt_normal && control->env()->bc_check((x1 + 1) / 3, y1 / 3) != bt_normal)
        return skylight;
    if (control->env()->bg_check(x1 / 3, (y1 + 1) / 3) != bt_normal && control->env()->bc_check(x1 / 3, (y1 + 1) / 3) != bt_normal)
        return skylight;
    if (control->env()->bg_check(x1 / 3, (y1 - 1) / 3) != bt_normal && control->env()->bc_check(x1 / 3, (y1 - 1) / 3) != bt_normal)
        return skylight;
    if (control->env()->bg_check((x1 - 1) / 3, (y1 - 1) / 3) != bt_normal && control->env()->bc_check((x1 - 1) / 3, (y1 - 1) / 3) != bt_normal)
        return skylight / 2;
    if (control->env()->bg_check((x1 + 1) / 3, (y1 + 1) / 3) != bt_normal && control->env()->bc_check((x1 + 1) / 3, (y1 + 1) / 3) != bt_normal)
        return skylight / 2;
    if (control->env()->bg_check((x1 - 1) / 3, (y1 + 1) / 3) != bt_normal && control->env()->bc_check((x1 - 1) / 3, (y1 + 1) / 3) != bt_normal)
        return skylight / 2;
    if (control->env()->bg_check((x1 + 1) / 3, (y1 - 1) / 3) != bt_normal && control->env()->bc_check((x1 + 1) / 3, (y1 - 1) / 3) != bt_normal)
        return skylight / 2;
    return 0;
}

int LController::intensity_test(int x0, int y0, int x1, int y1, float inten)
{
    int flag = 4;
    if (x0 == x1 && y0 == y1)
        return inten > 50 ? 50 : inten;
    int dx = abs(x1 - x0);
    int dy = abs(y1 - y0);
    int sx = x0 < x1 ? 1 : -1;
    int sy = y0 < y1 ? 1 : -1;
    int err = dx - dy;
    bool out = control->env()->bc_check(x0 / 3, y0 / 3) != bt_normal;

    uint8_t isa = 0;
    while (true) {
        bool xx = false;
        bool yy = false;

        int xd = x0 / 3;
        int yd = y0 / 3;

        if (out && control->env()->bc_check(xd, yd) == bt_normal) {
            return 0;
        } else if (!out && control->env()->bc_check(xd, yd) != bt_normal) {
            out = true;
            inten += 0.7;
        }

        if ((x0 == x1 && y0 == y1) || inten <= 0) {
            return flag = inten < 0 ? 0 : (inten > 50 ? 50 : inten);
            //break;
        }
        int e2 = 2 * err;

        if (e2 < dx) {
            err = err + dx;
            y0 += sy;
            yy = true;
        }
        if (e2 > -dy) {
            err = err - dy;
            x0 += sx;
            xx = true;
        }

        if (!out) {
            inten = inten / 2 - 1;
        } else {
            if (xx && yy)
                inten -= 1.4;
            else
                inten -= 1;
        }
    }
}

void LController::draw()
{
    float var = 4 * pge::draw::get_scale();
    float s = pge::draw::get_scale();
    //if (switch1)
    pge::image::draw(lighttexture, -(int(viewport->x * s) % int(var)), -(int(viewport->y * s) % int(var)), NULL, NULL, 0, var, var);
}
